<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PalindromActivity">

    <EditText
            android:id="@+id/edtInsert"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:hint="Digite o seu palindromo"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            android:textColorHint="@android:color/holo_green_dark"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado do palindromo"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_below="@id/edtInsert"
            android:textAlignment="center"
            android:layout_marginTop="50dp"/>

    <Button
            android:id="@+id/btnTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ã‰ UM PALINDROMO?"
            android:textColor="#fff"
            android:background="@android:color/holo_green_dark"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/txtResult"
            android:layout_marginTop="50dp"/>

</RelativeLayout>